
  <h1>Real-Time Product List</h1>
  <h2>Eliminar producto por ID</h2>
 <form id="deleteProductForm">
  <label for="productId">Product ID:</label>
  <input type="text" id="productId" name="productId" required>
  <button type="button" onclick="deleteProduct()">Delete Product</button>
</form>
  <h3>agregar un producto</h3>
   <form id="createProductForm">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required><br>

    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required><br>

    <label for="code">Code:</label>
    <input type="text" id="code" name="code" required><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required><br>

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" required><br>

    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required><br>

    <label for="thumbnails">Thumbnails (comma-separated URLs):</label>
    <input type="text" id="thumbnails" name="thumbnails" required><br>

    <button type="button" onclick="createProduct()">Create Product</button>
  </form>
  <ul class="products">
    {{#each products}}
      <li>
        <strong>ID:</strong> {{id}}<br>
        <strong>Title:</strong> {{title}}<br>
        <strong>Description:</strong> {{description}}<br>
        <strong>Code:</strong> {{code}}<br>
        <strong>Price:</strong> ${{price}}<br>
        <strong>Status:</strong> {{status}}<br>
        <strong>Stock:</strong> {{stock}}<br>
        <strong>Category:</strong> {{category}}<br>
        <strong>Thumbnails:</strong>
        <ul class="thumbnails">
          {{#each thumbnails}}
            <li><img class="image" src="{{this}}" alt="Thumbnail"></li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>

 <script src="/socket.io/socket.io.js"></script>
 <script src="/js/realTimeProducts.js"></script>




