<h1>Chat</h1>

<div id="chat-container" data-user-email="{{user.email}}">
    <p><strong>Usuario: </strong>{{user.first_name}}</p>
    <p><strong>Email: </strong>{{user.email}}</p>
    <div id="message-form">
        <input type="text" id="message-input" placeholder="Tu mensaje">
        <button id="send-button">Enviar</button>
    </div>
    <ul id="message-list">
        {{#each messages}}
            {{#each this.messages}}
                <li><strong>{{../user}}:</strong> {{this.message}}</li>
            {{/each}}
        {{/each}}
    </ul>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>




